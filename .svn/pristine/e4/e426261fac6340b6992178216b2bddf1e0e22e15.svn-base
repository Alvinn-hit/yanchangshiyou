	<script>
		apiready = function() {
			//沉浸式
			var headbar = $api.byId('headbar');
			$api.fixIos7Bar(headbar);
			api.addEventListener({
				name : 'scrolltobottom',
				extra : {
					threshold : 0 //设置距离底部多少距离时触发，默认值为0，数字类型
				}
			}, function(ret, err) {
				nextPage(0);
				findDocList();
			});
			api.addEventListener({
				name : 'flushWaybillViewEvent',
			}, function(ret, err) {
				prevPage();
				findDocList();
			});
			api.setRefreshHeaderInfo({
				visible : true,
				bgColor : '#FFFFFF',
				textColor : '#ccc',
				textDown : '下拉刷新',
				textUp : '松开刷新',
				textLoading : '加载中',
				showTime : true
			}, function(ret, err) {
				prevPage();
				findDocList();
			});
			findDocList();
			//油站列表
		};
		
		// 查询优惠新闻列表
		function findDocList() {
			var ajaxObject = new Object();
			ajaxObject.url = "/appPortalDoclistAjax!queryPortalDoclistByPage.htm";
			ajaxObject.params = new Object();
			ajaxObject.params.whereStr = "menuComcode = '000002' and dataBillstate = '1'";// 优惠促销列表已发布状态
			ajaxObject.onSuccessFunction = function(data) {
				var pdvv = data.portalDoclistViewVoList;
				for(var i=0; i<pdvv.length; i++){
					pdvv[i].dataOpdate = formatDate(pdvv[i].dataOpdate);
				}
				getWorkBookHtmlByList(pdvv, "YH_DocList");
				//隐藏未显示选项
				for(var i=0; i<pdvv.length; i++){
					if(pdvv[i].doclistInfopic ==""){
						$("#img"+pdvv[i].doclistId+"").css("display","none");
					}
					if(pdvv[i].dataOpdate ==""){
						$("#timeline"+pdvv[i].doclistId+"").css("display","none");
					}
				}
				api.refreshHeaderLoadDone();
			}
			baseAjax(ajaxObject);
		}		

		//打开详情
		function openContent(doclistId) {
			api.openWin({
				name : 'discount-detail-head',
				url : 'discount-detail-head.html',
				pageParam: {
		        'doclistId' : doclistId
		       }
			});
		}
	</script>
