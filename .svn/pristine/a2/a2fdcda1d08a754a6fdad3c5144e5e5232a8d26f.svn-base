	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/aui-popup.js" ></script>
	<script type="text/javascript" src="../../script/aui-tab.js" ></script>
	<script type="text/javascript" src="../../script/swiper.min.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script type="text/javascript" src="../../script/common.js"></script>
	<script type="text/javascript" src="../../script/my_ajax.js"></script>
	<script type="text/javascript" src="../../script/page.js"></script>
	<script type="text/javascript" src="../../layer/layer.js"></script>
	<script>
		
		apiready = function() {
			api.addEventListener({
				name : 'scrolltobottom',
				extra : {
					threshold : 0 //设置距离底部多少距离时触发，默认值为0，数字类型
				}
			}, function(ret, err) {
				nextPage(0);
				queryGasGoodsByPage();
			});
			api.setRefreshHeaderInfo({
				visible : true,
				bgColor : '#FFFFFF',
				textColor : '#ccc',
				textDown : '下拉刷新',
				textUp : '松开刷新',
				textLoading : '加载中',
				showTime : true
			}, function(ret, err) {
				prevPage();
				queryGasGoodsByPage();
			});
			queryGasGoodsByPage();
		}
		
		// 查询便利店商品信息列表
		function queryGasGoodsByPage(){
			var ajaxObject = new Object();
			ajaxObject.url = "/appCvstoreGoodsAjax!queryGasGoodsByPage.htm";
			ajaxObject.params = new Object();
			ajaxObject.onSuccessFunction = function(data) {
				var data = data.portalTginfoViewVoList;
				var modelZeorArry = new Array();	// 零条数据模板
				var modelOneArry = new Array();		// 一条数据模板
				var modelTwoArry = new Array();		// 两条数据模板
				var modelThreeArry = new Array();	// 三条数据模板
				for(var i=0;i<data.length;i++){
					if(data[i].tginfoKey == '0'){
						modelZeorArry.push(data[i]);
					}
					if(data[i].tginfoKey == '1'){
						modelOneArry.push(data[i]);
					}
					if(data[i].tginfoKey ==	'2'){
						modelTwoArry.push(data[i]);
					}
					if(data[i].tginfoKey == '3'){
						modelThreeArry.push(data[i]);
					}
				}
				getWorkBookHtmlByList(modelZeorArry, "modelZeor");
				if(modelOneArry.length > 0) getWorkBookHtmlByList(modelOneArry, "modelOne");
				if(modelTwoArry.length > 0) getWorkBookHtmlByList(modelTwoArry, "modelTwo");
				if(modelThreeArry.length > 0) getWorkBookHtmlByList(modelThreeArry, "modelThree");
				
				api.refreshHeaderLoadDone();
				$("#all").show();
			}
			
			baseAjax(ajaxObject);
		}
		
		var bar = document.querySelectorAll(".aui-bar-btn");
	    if(bar){
	        for(var i=0; i<bar.length;i++){
	            var d = bar[i];
	            var tab = new auiTab({
	                element:bar[i],
	                repeatClick:true
	            },function(ret){
	                if(ret.dom.parentNode.getAttribute("type") && ret.dom.parentNode.getAttribute("type")=="count"){
	                    var count = parseInt(document.getElementById("count").value);
	                    if(ret.index==2)return;
	                    if(ret.index==1){
	                        document.getElementById("count").value = count-1;
	                        if(count==0){
	                        	document.getElementById("count").value = 0;
	                        }
	                    }
	                    if(ret.index==3){
	                        document.getElementById("count").value = count+1;
	                    }
	                }
	            });
	
	        }
	    }
	    
		//查看指定油站全部商品
		function moreList(gasCode,gasName) {
			if(gasCode == "" || gasCode == null || gasCode == "undefined"){
				api.toast({
	                msg:'油站代码为空'
                });
                return false;
			}
			api.openWin({
				reload : true,
				name : 'cvstore-more-list-head',
				url : 'cvstore-more-list-head.html',
				pageParam : {
					"gasCode" : gasCode,
					"gasName" : gasName
				},
			});
		}
		
		//查看单个商品详情
		function goods(goodsCode) {
			if(goodsCode == "" || goodsCode == null || goodsCode == "undefined"){
				api.toast({
	                msg:'商品代码为空'
	            });
                return false;
			}
			api.openWin({
			 	reload : true,
				name : 'goods-detail-head',
				url : 'goods-detail-head.html',
				pageParam : {
					"goodsCode" : goodsCode
				},
			});
		}

	</script>
