<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>文档</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/aui.2.0.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/style.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/swiper.min.css" />
		<link rel="stylesheet" type="text/css" href="../../css/iconfont.css" />
		<style>
			html, body {
				background: #F5F5F5;
			}
			.aui-list:before {
				height: 0px;
			}
			.btn-box {
				width: 100%;
				background: #fff;
				height: 50px;
				text-align: center;
				padding-top: 10px;
			}
			.btn-box .aui-btn {
				width: 95%;
				padding: 5px;
				font-size: 1rem;
			}
			.fix-box {
				position: fixed;
				bottom: 0px;
			}
			/*列表*/
			.purple {
				color: #bf6cef;
			}
			.youquan-list-box {
				display: -webkit-box;
				display: -webkit-flex;
				display: flex;
				-webkit-flex-flow: row;
				flex-flow: row;
				background: #fff url("../../image/bg-ico.jpg") no-repeat right top;
				background-size: 16px;
				font-size: 0.875rem;
				min-height: 120px;
				border-radius: 5px;
				margin-bottom: 10px;
			}
			.list-left-all {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
			}
			.list-right-all {
				width: 6rem;
				border-left: 1px dashed #ddd;
				padding: 0px 5px 0px 5px;
			}
			.list-right-all span {
				text-align: center;
				display: block;
				margin-top: 5px;
			}
			.list-left-top {
				height: 40px;
				padding: 2px 0px 7px 10px;
				color: #000;
				border-bottom: 1px solid #ddd;
			}
			.list-left-top img {
				width: 35px;
				vertical-align: middle;
				margin-right: 5px;
			}
			.list-left-bottom {
				padding: 6px 0px 4px 10px;
				overflow: hidden;
			}
			.list-left-bottom img {
				width: 115px;
				height: 80px;
				float: left;
			}
			.card1 .use-btn {
				border: 1px solid #6612fb;
				border-radius: 10px;
				background: #bf6cef;
				color: #fff;
				padding: 3px 0px 3px 0px;
			}
			.card1 .much-box {
				float: left;
				margin-left: 5px;
				margin-top: 10px;
			}
			.card1 .much-box b {
				font-size: 1.5rem;
				color: #bf6cef;
			}
			/*列表*/
			/*详情*/
			.content-all {
				overflow: hidden;
				padding-bottom: 50px;
			}
			.tel-img {
				width: 35px;
			}
			.word-box {
				background: #fff;
				margin-top: 10px;
				padding: 10px;
			}
			.word-box h1 {
				font-size: 0.875rem;
				padding-bottom: 5px;
				margin-bottom: 5px;
			}
			.word-box p {
				line-height: 18px;
			}
		</style>
	</head>
	<body id="all" style="display: none">
		<div class="content-all" >
			<div class="aui-content-padded">
				<div class="youquan-list-box card1" id="groupVoucherCon" style="display:none ">
					
					<div class="list-left-all ">
						<div class="list-left-top">
							<img src="../../image/logo-icon01.png">{cardName}
						</div>
						<div class="list-left-bottom">
							<img src="../../image/default/quan.jpg" datasrc="{baseURL}/{cardImgPath}" class="imgClass">
							<div class="much-box">
								剩余：
								<br>
								<b>{accountSmoney}{bonusRule5Str}</b>
							</div>
						</div>
					</div>
					<div class="list-right-all">
						<span class="aui-font-size-14 purple">{bonusRule2}{bonusRule1}</span>
						<span class="aui-font-size-14 purple">{accountMoney}{bonusRule5Str}</span>
						<span class="aui-font-size-14">有效日期截止</span>
						<span class="aui-font-size-14">{dataEdateStr}</span>
						<span onclick="zhifubox('{accountCode}')" class="use-btn">去使用</span>
					</div>
				</div>
			</div>
			<ul class="aui-list aui-margin-t-15" id="gasDetail" style="display: none">
				<li class="aui-list-item aui-padded-t-10 aui-padded-b-10">
					<div class="aui-list-item-inner">
						<div class="aui-list-item-title ">
							适用油站 （离我最近）
						</div>
					</div>
				</li>
				<li class="aui-list-item aui-padded-t-10 aui-padded-b-10">
					<div class="aui-list-item-inner">
						<div class="aui-list-item-title">
							{bonusRule12}     {bonusRule15}km
							<br>
							<span style="color: #888">{bonusRule13}</span>
						</div>
						<div class="aui-list-item-right" onclick="call('{bonusRule14}');">
							<img class="tel-img" src="../../image/tel-ico1.jpg">
						</div>
					</div>
				</li>
				<li onclick="useYouzhan()" class="aui-list-item aui-list-item-arrow aui-padded-t-10 aui-padded-b-10">
					<div class="aui-list-item-inner">
						<div class="aui-list-item-title">
							全部门店信息
						</div>
						<div class="aui-list-item-right aui-font-size-16">
							共{bonusRule4}站
						</div>
					</div>
				</li>
			</ul>
			<div class="word-box">
				<h1 class="aui-border-b">团购细则</h1>
				<p id="manual"></p>
			</div>
		</div>
	
		<div class="btn-box fix-box" style="display: none">
			<div class="aui-btn aui-btn-danger" onclick="zhuanzeng()">
				转赠朋友
			</div>
		</div>
	</body>
	<script type="text/javascript" src="../../script/aui-tab.js" ></script>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script type="text/javascript" src="../../script/common.js"></script>
	<script type="text/javascript" src="../../script/my_ajax.js"></script>
	<script type="text/javascript" src="../../script/page.js"></script>
	<script type="text/javascript" src="../../script/system.js"></script>
	<script>
		var bonusAccountViewVo = new Array();
		var map, lat, lon, aMapNavigation, tempLon, tempLat;
		var dataBillstate,accountSmoney,accountMoney,accountCode="";
		apiready = function() {
			map = api.require('aMap');
			$api.fixIos7Bar($api.byId('headbar'));
			api.setStatusBarStyle({
				style : 'light',
			});
			loadData();
		}
		
		//加载详情
		function loadData() {
			lon = $api.getStorage("currLon");
			lat = $api.getStorage("currLat");
			if(lon && lat){
				findGroupVoucherDetail();
				return;
			}
		
			var aMapLBS = api.require('aMapLBS');//定位
			aMapLBS.configManager({
			    accuracy: 'hundredMeters',
			    filter: 1
			}, function(ret, err) {
			    if (ret.status) {
			        aMapLBS.singleLocation({
					    timeout: 10
					}, function(ret, err) {
					    if (ret.status) {
					       	lat = ret.lat;
							lon = ret.lon;
							findGroupVoucherDetail();
						}
					});
				}else{
					$("#gasDetail").html("暂无信息");
					$("#all").show();
				}
			});		
		}
		
		// 查询团购券详情
		function findGroupVoucherDetail() {
			var ajaxObject = new Object();
			ajaxObject.url = "/appGroupVoucherAjax!querySupplementGroupVoucherViewVoCache.htm";
			ajaxObject.params = new Object();
			ajaxObject.params.accountCode = api.pageParam.accountCode;
			ajaxObject.params.lat = lat;
			ajaxObject.params.lon = lon;
			ajaxObject.onSuccessFunction = function(ret) {
				var data = ret.bonusAccountViewVo;
				bonusAccountViewVo = data;
				data.endDateStr = data.endDateStr.substring(0, 10);
				dataBillstate = data.dataBillstate;			// 状态 
				accountSmoney = data.accountSmoney;			// 总额
				accountMoney = data.accountMoney;			// 余额
				accountCode = data.accountCode;				// 业务代码
				accountId = data.accountId;					// 是否被使用标识 
				if(data.accountRemark){
					data.accountRemark =  data.accountRemark.replace(new RegExp("\r","gim"), "<br/>");
				}
				$("#manual").html(data.accountRemark);
				if (data.dataBillstate = 2 && accountId != 1) {
					$(".btn-box").show();
				}
				getWorkBookHtmlByList(data, 'groupVoucherCon');
				getWorkBookHtmlByList(data, 'gasDetail');
				$("#all").show();
				//列表图片缓存
				$(".imgClass").each(function(index){
					imageCache(this);
				});
			}
			baseAjax(ajaxObject);
		}
		
		// 拨打电话
		function call(tel) {
			if (!tel || tel == "") {
				return;
			}
			api.call({
				type : 'tel_prompt',
				number : tel
			});
		}

		//可用油站
		function useYouzhan() {
			api.openWin({
				name : 'use-youzhan-list-head',
				url : '../grouporder/use-youzhan-list-head.html',
				reload : true,
				pageParam : {
					memberCcode : bonusAccountViewVo.memberCcode,
					memberCode : bonusAccountViewVo.bonusRule8,
				}
			});
		}

		// 去使用
		function zhifubox() {
			api.openWin({
				name : 'youzhan-head',
				url : '../addoil/youzhan-head.html',
				reload : true,
			});
		}

		//打开转增
		function zhuanzeng() {
			if (dataBillstate != '2') {
				api.toast({
					msg : '该状态下的团购券不允许转赠'
				});
				return false;
			}
			if (accountId == 1) {
				api.toast({
					msg : '使用过的团购券不允许转赠'
				});
				return false;
			}
			api.openWin({
				name : 'my-zhuanzeng-head',
				url : 'my-zhuanzeng-head.html',
				reload : true,
				pageParam : {
					"accountCode" : accountCode,
					"voucherType" : "2",		// 团购券传2,预购券传3
				}
			});
		}
		
		// 去使用
		function zhifubox(accountCode) {
			var ajaxObject = new Object();
			ajaxObject.url = "/appGroupVoucherAjax!queryGroupVoucherGasStation.htm";
			ajaxObject.params = new Object();
			ajaxObject.params.accountCode = accountCode;
			ajaxObject.onSuccessFunction = function(data) {
				var gasStationStr = data.gasStationStr;
				api.openWin({
					name : 'youzhan-head',
					url : '../addoil/youzhan-head.html',
					reload : true,
					pageParam : {
						gasStationStr : gasStationStr,
					}
				});
			}
			baseAjax(ajaxObject);
		}
	</script>
</html>