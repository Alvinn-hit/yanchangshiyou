		<style>
			html, body {
				background: #F5F5F5;
			}
			/*列表*/
			.green {
				color: #29d4c6;
			}
			.youquan-list-box {
				display: -webkit-box;
				display: -webkit-flex;
				display: flex;
				-webkit-flex-flow: row;
				flex-flow: row;
				background: #fff url("../../image/bg-ico.jpg") no-repeat right top;
				background-size: 16px;
				font-size: 0.875rem;
				min-height: 150px;
				border-radius: 5px;
				margin-bottom: 10px;
			}
			.list-left-all {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
			}
			.list-right-all {
				width: 6rem;
				border-left: 1px dashed #ddd;
				padding: 0px 5px 0px 5px;
			}
			.list-right-all span {
				text-align: center;
				display: block;
				margin-top: 5px;
			}
			.list-left-top {
				height: 40px;
				padding: 2px 0px 7px 10px;
				color: #000;
				border-bottom: 1px solid #ddd;
			}
			.list-left-top img {
				width: 35px;
				vertical-align: middle;
				margin-right: 5px;
			}
			.list-left-bottom {
				padding: 6px 0px 4px 10px;
				overflow: hidden;
			}
			.list-left-bottom img {
				width: 115px;
				height:80px;
				float: left;
			}
			.card1 .use-btn {
				border: 1px solid #0fa798;
				border-radius: 10px;
				background: #29d4c6;
				color: #fff;
				padding: 3px 0px 3px 0px;
			}
			.card1 .much-box {
				float: left;
				margin-left: 5px;
				margin-top: 10px;
			}
			.card1 .much-box b {
				font-size: 1.5rem;
				color: #29d4c6;
			}
			/*列表*/
		</style>
	</head>
	<body>
		<div class="aui-content-padded" id="list" style="display: none;" >
			<div class="youquan-list-box card1" onclick="choose('{accountCode}','{accountSmoney}','{bonusRule3}','{accountCmoney}','{bonusRule9}');">
				<div class="list-left-all">
					<div class="list-left-top">
						<img src="../../image/logo-icon01.png">{cardName}
					</div>
					<div class="list-left-bottom">
						<img class="imgClass" src="../../image/default/quan.jpg" datasrc="{baseURL}/{cardImgPath}">
						<div class="much-box">
							剩余：
							<br>
							<b>{accountSmoney}{bonusRule5Str}</b>
						</div>
					</div>
				</div>
				<div class="list-right-all">
					<span class="aui-font-size-14 purple">{bonusRule2}{bonusRule1}</span>
					<span class="aui-font-size-14 green">{accountSmoney}{bonusRule5Str}</span>
					<span class="aui-font-size-14">有效日期截止</span>
					<span class="aui-font-size-14">{dataEdateStr}</span>
					<span  class="use-btn">去使用</span>
				</div>
			</div>
		</div>
	</body>
		<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script type="text/javascript" src="../../script/common.js"></script>
	<script type="text/javascript" src="../../script/my_ajax.js"></script>
	<script type="text/javascript" src="../../script/page.js"></script>
	<script type="text/javascript">
		var oilInfo;
		apiready = function() {
			oilInfo = api.pageParam.oilInfo;
			
			api.addEventListener({
				name : 'scrolltobottom',
				extra : {
					threshold : 10 //设置距离底部多少距离时触发，默认值为0，数字类型
				}
			}, function(ret, err) {
				nextPage(0);
				queryMyGroupVoucherByPage(1);
			});
			api.setRefreshHeaderInfo({
				visible : true,
				bgColor : '#FFFFFF',
				textColor : '#ccc',
				textDown : '下拉刷新',
				textUp : '松开刷新',
				textLoading : '加载中',
				showTime : true
			}, function(ret, err) {
				prevPage();
				queryMyGroupVoucherByPage(1);
			});
			
			queryMyGroupVoucherByPage();
		}
		
		//查询此加油站对应预购券
		var ginfoBillno;//预购券业务号
		function queryMyGroupVoucherByPage(isShow){
			var ajaxObject = new Object();
			ajaxObject.url = "/appPreVoucherAjax!queryStationMySupplementPreVoucherByPageCache.htm";
			ajaxObject.params = new Object();
			if(isShow){
				ajaxObject.isShowProgress = '1';
			}
			ajaxObject.params.memberCode = api.pageParam.memberCode;
			ajaxObject.params.memberPcode = oilInfo.memberPcode;
			ajaxObject.params.bonusRule2 = oilInfo.oilNo;
			if(oilInfo.oilNum == "0"){//查询金额的
				ajaxObject.params.whereStr = " accountSmoney > 0 and bonusRule3 = '1' and dataSdate < sysdate and dataEdate > sysdate ";
			}else{//查询数量的
				ajaxObject.params.whereStr = " accountSmoney > 0 and bonusRule3 = '2' and dataSdate < sysdate and dataEdate > sysdate ";
			}
			ajaxObject.params.orderBy = ' dataEdate asc ';
			ajaxObject.onSuccessFunction = function(data) {
				var list = data.bonusAccountViewVoList;
				for(var i = 0 ; i < list.length ; i++){
					list[i].accountSmoney = toFixed(parseFloat(list[i].accountSmoney));
				}
				getWorkBookHtmlByList(list, 'list');
				
				api.refreshHeaderLoadDone();	
				//列表图片缓存
				$(".imgClass").each(function(index){
					imageCache(this);
				});
			}
			baseAjax(ajaxObject);
		}
	
		function choose(accountCode, accountSmoney, bonusRule3, accountCmoney, accountBmoney ) {
			if(bonusRule3 == 1){//金额的
				if(parseFloat(accountSmoney) < parseFloat(oilInfo.price)){
					api.toast({msg : '余额不足',duration : 2000,location : 'center'});
					return;
				}
			}else{//数量的
				if(parseFloat(accountSmoney) < parseFloat(oilInfo.oilNum)){
					api.toast({msg : '余额不足',duration : 2000,location : 'center'});
					return;
				}
			}
			
			//计算优惠金额
			var favPrice = 0;
			if(bonusRule3 == 1){//金额
				favPrice = parseFloat(Number(oilInfo.price) * (10 - Number(accountCmoney)) / 10 );
			}else{
				favPrice = parseFloat(Number(oilInfo.oilNum) * (Number(oilInfo.oilPrice) - Number(accountBmoney) / Number(accountSmoney)));
			}
			
			api.sendEvent({
				name : 'favorCardEvent',
				extra : {
					accountSmoney : accountSmoney,
					accountCode : accountCode,
					favPrice : favPrice,
					payType : '4',
				}
			});
			api.closeWin();
		
		
//      	oilInfo.favorType = '0';
