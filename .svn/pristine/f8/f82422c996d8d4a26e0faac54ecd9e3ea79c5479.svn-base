<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>文档</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/aui.2.0.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/style.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/swiper.min.css" />
		<style>
			html, body {
				background: #F5F5F5;
			}
			/*列表*/
			.youquan-list-box {
				display: -webkit-box;
				display: -webkit-flex;
				display: flex;
				-webkit-flex-flow: row;
				flex-flow: row;
				background: #fff url("../../image/bg-ico.jpg") no-repeat right top;
				background-size: 16px;
				font-size: 0.875rem;
				height: 120px;
				border-radius: 5px;
				margin-bottom: 10px;
			}
			.list-left-all {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
			}
			.list-right-all {
				width: 6rem;
				border-left: 1px dashed #ddd;
				padding: 20px 5px 0px 5px;
			}
			.list-right-all span {
				text-align: center;
				display: block;
				margin-top: 5px;
			}
			.list-left-top {
				height: 40px;
				padding: 2px 0px 7px 10px;
				color: #000;
				border-bottom: 1px solid #ddd;
			}
			.list-left-top img {
				width: 35px;
				vertical-align: middle;
				margin-right: 5px;
			}
			.list-left-bottom {
				padding: 6px 0px 4px 10px;
				overflow: hidden;
			}
			.list-left-bottom img {
				width: 100px;
				float: left;
			}
			.card1 .use-btn {
				border: 1px solid #d91111;
				border-radius: 10px;
				background: #f74949;
				color: #fff;
				padding: 3px 0px 3px 0px;
			}
			.card1 .much-box {
				float: left;
				margin-left: 5px;
				margin-top: 10px;
			}
			.card1 .much-box b {
				font-size: 1.5 rem;
				color: #FF0000;
			}
			.card2 .use-btn {
				border: 1px solid #fd450b;
				border-radius: 10px;
				background: #f97224;
				color: #fff;
				padding: 3px 0px 3px 0px;
			}
			.card2 .much-box {
				float: left;
				margin-left: 5px;
				margin-top: 10px;
			}
			.card2 .much-box b {
				font-size: 1.5 rem;
				color: #f97224;
			}
			.card3 .use-btn {
				border: 1px solid #2277ff;
				border-radius: 10px;
				background: #37abfc;
				color: #fff;
				padding: 3px 0px 3px 0px;
			}
			.card3 .much-box {
				float: left;
				margin-left: 5px;
				margin-top: 10px;
			}
			.card3 .much-box b {
				font-size: 1.5 rem;
				color: #37abfc;
			}
			/*列表*/
		</style>
	</head>
	<body>
		<div class="aui-content-padded" id="zkCard" style="display: none;">
			<div class="youquan-list-box card3" onclick="choose('{accountCode}','{accountCmoney}');">
				<div class="list-left-all">
					<div class="list-left-top">
						<img src="../../image/logo-icon01.png">{cardName}
					</div>
					<div class="list-left-bottom">
						<img src="{baseURL}/{cardImgPath}">
						<div class="much-box">
							可享：
							<br>
							<b>{accountCmoney}折</b>
						</div>
					</div>
				</div>
				<div class="list-right-all">
					<span class="aui-font-size-14">有效日期截止</span>
					<span class="aui-font-size-14">{dataEdateStr}</span>
					<span class="use-btn" >去使用</span>
				</div>
			</div>
		</div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script type="text/javascript" src="../../script/common.js"></script>
	<script type="text/javascript" src="../../script/my_ajax.js"></script>
	<script type="text/javascript">
		var oilInfo;
		apiready = function() {
			oilInfo = api.pageParam.oilInfo;
			queryMyGasCardViewVo();
		}
		
		//查询此加油站对应油卡
		function queryMyGasCardViewVo(){
			var ajaxObject = new Object();
			ajaxObject.url = "/appGasCardAjax!queryStationMySupplementGasCardByPage.htm";
			ajaxObject.params = new Object();
			ajaxObject.params.memberCode = api.pageParam.memberCode;
			ajaxObject.params.whereStr = " accountSubType = '3' and dataSdate < '"+ formatDate(new Date(),"yyyy-MM-dd HH:mm:ss") +"' and dataEdate > '"+ formatDate(new Date(),"yyyy-MM-dd HH:mm:ss") +"' ";
			//ajaxObject.isShowProgress = '1';//不显示加载
			ajaxObject.onSuccessFunction = function(ret) {
				getWorkBookHtmlByList(ret.bonusAccountViewVoList, 'zkCard');
			}
			baseAjax(ajaxObject);
		}

		function choose(accountCode, accountCmoney) {
			api.sendEvent({
				name : 'favorCouponEvent',
				extra : {
					accountCmoney : accountCmoney,
					accountCode : accountCode,
					favorType : '2'
				}
			});
			api.closeWin();
		}
	</script>
</html>