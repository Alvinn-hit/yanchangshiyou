<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>文档</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/aui.2.0.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/style.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/swiper.min.css" />
		<link rel="stylesheet" type="text/css" href="../../css/iconfont.css" />
		<style>
			html, body {
				height: 100%;
				background: #eaeaea;
			}
			.back {
				color: #fff;
				font-weight: bold;
				float: left;
				margin-top: 4px;
				margin-right: 4px;
			}
			.head-box1 {
				display: -webkit-box;
				display: -webkit-flex;
				display: flex;
				-webkit-flex-flow: row;
				flex-flow: row;
				height: 45px;
			}
			.head-box1-td1 {
				width: 80px;
			}
			.head-box1-td3 {
				width: 80px;
			}
			.head-box1-td2 {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
			}
			.change-box2 {
				line-height: 27px;
				border-top-right-radius: 4px;
				border-bottom-right-radius: 4px;
				cursor: pointer;
			}
			.change-box1 {
				line-height: 27px;
				border-top-left-radius: 4px;
				border-bottom-left-radius: 4px;
				cursor: pointer;
			}
			.aui-tab {
				margin-top: 9px;
				margin-left: auto;
				margin-right: auto;
				width: 163px;
			}
			.aui-tab-item {
				width: 100%;
				height: 27px;
				overflow: hidden;
				font-size: 1rem;
				text-align: center;
				color: #fff;
				background: none;
				-webkit-box-flex: 1;
				box-flex: 1;
				border: 1px solid #fff;
			}
			.aui-tab-item.aui-active {
				color: #e6212a;
				background-color: #fff;
				z-index: 100;
				border: 1px solid #fff;
			}
			.aui-tab:after {
				content: '';
				position: absolute;
				left: 0;
				bottom: 0;
				right: auto;
				top: auto;
				height: 0px; 
				width: 100%;
				background-color: #dddddd;
				display: block;
				z-index: 2;
				-webkit-transform-origin: 50% 100%;
				transform-origin: 50% 100%;
			}
		</style>
	</head>
	<body>
		<div id="headbar" class="head-bar">
			<div class="head-box1">
				<div class="head-box1-td1">
					<div class="logo-img">
						<span onclick="api.closeWin()" class="iconfont icon-jiantou3 back"></span>
						<img src="../../image/logo2.jpg">
					</div>
				</div>
				<div class="head-box1-td2">
					<div class="aui-tab" id="tab">
					    <div class="aui-tab-item change-box1">商品</div>
					    <div class="aui-tab-item change-box2">我的订单</div>
					</div>
				</div>
				<div class="head-box1-td3"></div>
			</div>
		</div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/aui-tab.js"></script>
	<script>
		apiready = function() {
			$api.fixIos7Bar($api.byId('headbar'));
			api.setStatusBarStyle({
				style : 'light',
			});
			api.openFrame({
				name : 'cvstore-list-page',
				url : 'cvstore-list-page.html',
				rect : {
					x : 0,
					y : $api.byId("headbar").offsetHeight,
					w : 'auto',
					h : 'auto'
				}
			});
		}
		function searchList() {
			api.openWin({
				name : 'cvstore-list-page',
				url : './cvstore-list-page.html'
			});
		}
		
		//tab选项卡
		var tab = new auiTab({
			element : document.getElementById("tab")
		},function(ret){
        	var index = ret.index;
        	switch(index) {
        		case 1:
        			api.openFrame({
						name : 'cvstore-list-page',
						url : 'cvstore-list-page.html',
						rect : {
							x : 0,
							y : $api.byId("headbar").offsetHeight,
							w : 'auto',
							h : 'auto'
						}
					});
					break;
				case 2:
					api.openFrame({
						name : 'my-list-page02',
						url : 'my-list-page02.html',
						rect : {
							x : 0,
							y : $api.byId("headbar").offsetHeight,
							w : 'auto',
							h : 'auto'
						}
					});
					break;
        	}
		});
	</script>
</html>