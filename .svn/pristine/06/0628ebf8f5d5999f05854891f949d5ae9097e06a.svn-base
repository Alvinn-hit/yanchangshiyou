<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>文档</title>
     <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/aui.2.0.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/style.css"/>
     <link rel="stylesheet" type="text/css" href="../../css/swiper.min.css" />
    <style>
       .my-box-all{
         position: relative;
       }
       .my-box-1{       
         overflow: hidden;
        }
        .my-box-2{
         border:1px solid #ff7f00;
         overflow: hidden;
         margin: 25px 10px 10px 10px;
         height: 42px;
         border-radius: 5px;
        }
        .my-tel-img{
          width: 12px;
          float:left;
        } 
        .tel-number{
          font-size: 0.875rem;
          margin-left: 5px;
          margin-top: 2px;
        }
        .aui-list .aui-list-item-text{
          display: block;
        }
        .weima-img{
          position: absolute;
          right:0px;
          width: 20px;
          top:15px;
        }
        .aui-list .name-title{
          font-size: 1rem!important;
        }
        .bottom-ul{
          background: #fff;
          overflow: hidden;
        }
        .bottom-ul li{
           float: left;
           width: 33%;
           position: relative;
           height: 50px;
        }
        .bottom-ul li span{
         display: block;
         text-align: center;
         margin-top: 6px;
         
        }
        .bottom-ul li:after{
          content:"";
          width: 1px;
          height:30px;
          top:10px;
          background: #ddd;
          position: absolute;
          right:0px;
        }
        .span-top{
          font-size: 0.875rem;
        }
        .span-bottom{
          font-size: 0.75rem;
        }
        .span-top img{
          width: 19px;
          vertical-align: middle;
          margin-right: 5px;
        }
        /*列表*/              
        .li-icon{
          display: block;
          margin-right: 5px;
          margin-top: 10px;
          margin-left: 10px;
        }
        .li-icon img{
          width: 20px;
        }
        .aui-list-item-title{
          font-size: 0.875rem!important;
        }
    </style>
</head>
<body>     
    <div class="my-box-all">
     <div class="my-box-1">
       <div class="my-box-top " onclick="my()">
          <div class="aui-content">
		    <ul class="aui-list aui-media-list">
		        <li class="aui-list-item aui-list-item-middle">
		            <div class="aui-media-list-item-inner">
		                <div class="aui-list-item-media" >
		                    <img class="img-head" src="../../image/my1.jpg" >
		                </div>
		                <div class="aui-list-item-inner aui-list-item-arrow">
		                    <div class="aui-list-item-text">
		                        <div class="aui-list-item-title name-title">杨宽容</div>
		                         <img class="weima-img" src="../../image/my2.jpg">
		                    </div>
		                    <div class="aui-list-item-text aui-margin-t-10">
		                        <img class="my-tel-img" src="../../image/my3.jpg">
		                        <span class="tel-number">15389414445</span>
		                    </div>
		                </div>
		            </div>
		        </li>       
		    </ul>
			</div>
       </div>
       <div class="my-box-bottom">
         <ul class="bottom-ul">
          <li onclick="yue()">
           <span class="span-top">
            <img src="../../image/my4.jpg">
                                     加油余额
           </span>
           <span class="span-bottom">
            0.00
           </span>
          </li>
           <li>
           <span class="span-top">
            <img src="../../image/my5.jpg">
                                    优惠券
           </span>
           <span class="span-bottom">
            0.00
           </span>
          </li>
           <li>
           <span class="span-top">
            <img src="../../image/my6.jpg">
                                     消息
           </span>
           <span class="span-bottom">
            0.00
           </span>
          </li>
         </ul>
       </div>
     </div>
     
     
        <div class="aui-content aui-margin-t-15">
	    <ul class="aui-list ">
	    
	       <!-- <li onclick="mymoney()" class="aui-list-item aui-list-item-middle">
	        <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon1.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">钱包</div>
	        </li>-->
	        <li onclick="myyouka()" class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon2.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">油卡</div>
	            </div>
	        </li>
	        <li onclick="myyouquan()" class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon3.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">油券</div>
	            </div>
	        </li>
	        <li class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon4.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">积分</div>
	            </div>
	        </li>
	        <li onclick="xiaofei()" class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon5.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">消费记录</div>
	            </div>
	        </li>
	        <li onclick="fapiao()" class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon6.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">发票</div>
	            </div>
	        </li>
	        <li onclick="shezhi()" class="aui-list-item">
	         <div class="aui-list-item-label-icon">
                 <span class="li-icon"><img src="../../image/my-icon7.jpg"></span>
            </div>
	            <div class="aui-list-item-inner aui-list-item-arrow">
	                <div class="aui-list-item-title">设置</div>
	            </div>
	        </li>
	    </ul>
	</div>
   </div>  
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script>
 apiready = function(){
   $api.fixIos7Bar( $api.byId('headbar') );
        api.setStatusBarStyle({
            style: 'light',
        });
 }
 
  //打开我的钱包
 function mymoney(){
   api.openWin({
	   name: 'my-money-head',
	   url: '../my/my-money-head.html'
   });
 }
 
 //打开我的油券
 function myyouquan(){
   api.openWin({
	   name: 'my-youquan-head',
	   url: '../my/my-youquan-head.html'
   });
 }
 
 //打开我的信息
 function my(){
  api.openWin({
	   name: 'my-head',
	   url: '../my/my-head.html'
   });
 }
 //打开油卡
 function myyouka(){
  api.openWin({
	   name: 'my-youka-head',
	   url: '../my/my-youka-head.html'
   });
 }
 
 //打开设置
