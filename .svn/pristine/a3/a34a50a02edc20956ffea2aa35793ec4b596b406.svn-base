<script type="text/javascript">
	var bonusAccountViewVo, accountBmoney, accountCmoney;
	var map, lat, lon, aMapNavigation, tempLon, tempLat;
    apiready = function(){
	    map = api.require('aMap');
	    $api.fixIos7Bar( $api.byId('headbar') );
        api.setStatusBarStyle({
            style: 'light',
        });
        loadData();
    };
    
    //加载详情
	function loadData() {
		lon = $api.getStorage("currLon");
		lat = $api.getStorage("currLat");
		if(lon && lat){
			queryGasCard();
			return;
		}
		
		var aMapLBS = api.require('aMapLBS');//定位
		aMapLBS.configManager({
		    accuracy: 'hundredMeters',
		    filter: 1
		}, function(ret, err) {
		    if (ret.status) {
		        aMapLBS.singleLocation({
				    timeout: 10
				}, function(ret, err) {
				    if (ret.status) {
				       	lat = ret.lat;
						lon = ret.lon;
						queryGasCard();
					}
				});
			}else{
				$("#gasDetail").html("暂无信息");
				$("#all").show();
			}
		});		
	}
    
	// 查询油站详情
	function queryGasCard(){
		var ajaxObject = new Object();
		ajaxObject.url = "/appGasCardAjax!querySupplementGasCardViewVoCache.htm";
		ajaxObject.params = new Object();
		ajaxObject.params.accountCode = api.pageParam.accountCode;
		ajaxObject.params.lat = lat;
		ajaxObject.params.lon = lon;
		ajaxObject.onSuccessFunction = function(ret) {
			var data = ret.bonusAccountViewVo;
			bonusAccountViewVo = data;
			data.dataEdateStr = data.dataEdateStr.substring(0,10);
			if(data.accountSubType == '3'){
				data.accountSmoney = "可享:<br><b>"+data.accountCmoney+"折</b>";
			}
			if(data.accountSubType == '2'){
				data.accountSmoney = "可用授信额度:<br><b>￥"+data.accountSmoney+"</b>";
			}
			if(data.accountSubType == '1'){
				data.accountSmoney = "可用余额:<br><b>￥"+data.accountSmoney+"</b>";
			}
			$("#yhCon").html(data.accountRemark);
			getWorkBookHtmlByList(data, "all");
			//列表图片缓存
			$(".imgClass").each(function(index){
				imageCache(this);
			});
		}
		baseAjax(ajaxObject);
	}

	// 拨打电话
	function call(tel){
		if(!tel || tel == ""){
			return;
		}
		api.call({
		    type: 'tel_prompt',
		    number: tel
		});
	}
	//可用油站
	function useYouzhan(){
	  api.openWin({
          name: 'use-youzhan-list-head',
          url: '../grouporder/use-youzhan-list-head.html',
          reload : true,
          pageParam : {
	          memberCcode : bonusAccountViewVo.memberCcode,
			  memberCode : bonusAccountViewVo.bonusRule8,
          }
      });
	}
 
</script>
