html, body {
	font-size: 14px;
	height: 100%;
}
textarea {
	width: 100%;
	-webkit-appearance: none;
	padding: 10px 15px;
	margin-bottom: 15px;
	line-height: 21px;
	-webkit-user-select: text;
	background-color: #fff;
	border: 1px solid rgba(0, 0, 0, .2);
	border-radius: 3px;
	outline: none;
}
.hover {
	opacity: .8;
}
.hover-a {
	background: #ddd;
}

.flex-wrap {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.flex-con {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
}
.flex-vertical {
	-webkit-box-orient: vertical;
	-webkit-flex-flow: column;
	flex-flow: column;
}

.border-t, .border-b {
	position: relative;
}

.border-t:before{
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	background: #FF0000;
	right: 0;
	height: 4px;
	-webkit-transform: scaleY(0.5);
	transform: scaleY(0.5);
	-webkit-transform-origin: 0 0;
	transform-origin: 0 0;
}
.border-b:after {
	top: auto;
	bottom: 0;
}

#wrap {
	height: 100%;
}




