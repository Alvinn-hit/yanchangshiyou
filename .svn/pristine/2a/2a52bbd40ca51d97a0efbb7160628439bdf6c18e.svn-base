<script>
 apiready = function(){
  
 }
 
 //选择金钱
 $(".money-box-bottom div").click(function(){
   $(".money-box-bottom").children("div").removeClass("active-money")
   $(this).addClass("active-money")
   var moneyNumber = $(this).html()
   $(".money-input").val(moneyNumber)
 })
 //选择油号
 function youhao(){
    layer.open({
    title: [
      '选择油号',
      'background-color: #ff0000; color:#fff; height:35px; line-height:35px; font-size:12px;'
    ],
    content: '<ul class="list-ul">'+
    '<li>#92</li>'+
    '<li>#92</li>'+
    '<li>#92</li>'+
    '<li>#92</li>'+
    '<li>#92</li>'+
    '</ul>'
  });  
  
   $(".list-ul>li").click(function(){
   layer.closeAll()
 })
 }
 
  //选择结算方式
 function jiesuanType(){
    layer.open({
    title: [
      '选择结算方式',
      'background-color: #ff0000; color:#fff; height:35px; line-height:35px; font-size:12px;'
    ],
    content: '<ul class="list-ul">'+
    "<li onclick='xzBalanceType(1)'>单位:元</li>"+
    "<li onclick='xzBalanceType(2)'>单位:升</li>"+
    "</ul>"
  });  
  
   $(".list-ul>li").click(function(){
        var jiesuanType = $(this).html()
        $(".jiesuanBox").html(jiesuanType) 
   		layer.closeAll()
   })
 }
 
 function xzBalanceType(type){
 	if(type == "1"){
 		$(".sheng-type-box").hide();
 		$(".money-type-box").show();
 	}else{
 		$(".money-type-box").hide();
 		$(".sheng-type-box").show();
 	}
 }
 
 //选择油枪 
 function youqiang(){
    layer.open({
    title: [
      '选择油枪',
      'background   -color: #ff0000; color:#fff; height:35px; line-height:35px; font-size:12px;'
    ],
    content: '<ul class="list-ul">'+
    '<li>1号枪</li>'+
    '<li>1号枪</li>'+
    '<li>1号枪</li>'+
    '<li>1号枪</li>'+
    '<li>1号枪</li>'+
    '</ul>'
  });  
  
   $(".list-ul>li").click(function(){
   layer.closeAll()
 })
 }

//选择车牌
 function chepai(){
    layer.open({
    title: [
      '选择车牌',
      'background-color: #ff0000; color:#fff; height:35px; line-height:35px; font-size:12px;'
    ],
    content: '<ul class="list-ul">'+
    '<li>沪213123123</li>'+
    '<li>沪44444</li>'+
    '<li>沪21313</li>'+
    '<li>沪6666</li>'+
    '<li>沪7777</li>'+
    '</ul>'
  });  
  
   $(".list-ul>li").click(function(){
   var chepai = $(this).html()
   $(".chepai-box").html(chepai)
   layer.closeAll()
 })
 }

//打开结算
function jiesuan(){
  api.openWin({
	  name: 'youzhan-zhifu-head1',
	  url: 'youzhan-zhifu-head1.html'
  });
}

</script>
