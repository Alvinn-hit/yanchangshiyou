<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>文档</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/aui.2.0.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/style.css"/>
		<link rel="stylesheet" type="text/css" href="../../css/swiper.min.css" />
		<link rel="stylesheet" type="text/css" href="../../css/iconfont.css" />
		<style>
			html, body {
				height: 100%;
				background: #fff;
			}
			.back {
				color: #fff;
				font-weight: bold;
				float: left;
				margin-top: 4px;
				margin-right: 4px;
			}
			.head-box1 {
				display: -webkit-box;
				display: -webkit-flex;
				display: flex;
				-webkit-flex-flow: row;
				flex-flow: row;
				height: 45px;
			}
			.head-box1-td1 {
				width: 80px;
			}
			.head-box1-td3 {
				width: 80px;
			}
			.head-box1-td2 {
				-webkit-box-flex: 1;
				-webkit-flex: 1;
				flex: 1;
			}
			.ditu-img {
				color: #fff;
				line-height: 45px;
				padding-left: 20px;
			}
			.ditu-img img {
				width: 15px;
				float: left;
				margin-top: 12px;
				margin-right: 5px;
			}
			.input-box {
				padding-top: 8px;
			}
			.input-box input {
				background: url("../../image/fada-ico.jpg") no-repeat #fff;
				background-size: 12px;
				background-position: 5px 8px;
				border-radius: 5px;
				padding-left: 22px;
				line-height: normal;
				font-size: 14px;
				min-height: 28px;
			}
		</style>
	</head>
	<body>
		<div id="headbar"  class="head-bar">
			<div class="head-box1">
				<div class="head-box1-td1">
					<div class="logo-img">
						<span onclick="closeWin()" class="iconfont icon-jiantou3 back"></span>
						<img src="../../image/logo2.jpg">
					</div>
				</div>
				<div class="head-box1-td2 input-box" oninput="queryByTitle()">
					<input id="companyName" type="text" placeholder="请输入商家名称或地址" />
				</div>
				<div class="head-box1-td3 ditu-img" onclick="ejiayou()">
					<img src="../../image/ditu-ico.jpg">地图
				</div>
			</div>
		</div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/my_ajax.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script>
		apiready = function() {
			//存储当前win的名字
			$api.setStorage("curWinName",api.winName);
		
			$api.fixIos7Bar($api.byId('headbar'));
			api.setStatusBarStyle({
				style : 'light',
			});
			api.openFrame({
				name : 'youzhan-page',
				url : 'youzhan-page.html',
				reload : true,
				pageParam : {
					gasStationStr : api.pageParam.gasStationStr,
				},
				rect : {
					x : 0,
					y : $api.byId("headbar").offsetHeight,
					w : 'auto',
					h : 'auto'
				}
			});
		}
		//地图
		function ejiayou(){
			api.openWin({
				name : 'ejiayou',
				url : 'ejiayou.html',
			});
		}
		//根据标题查询
		function queryByTitle(){
			var companyName = $("#companyName").val();
			if(companyName || companyName == ""){
				api.execScript({
				name : 'youzhan-head',
				frameName : 'youzhan-page',
	            script: 'queryByTitle('+JSON.stringify(companyName)+');'
           		});
			}
		}
		function closeWin(){
			api.closeToWin({
				name : "index"
			});
		}
	</script>
</html>